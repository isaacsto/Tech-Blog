{{#each posts}}


<form class="posts">
<div class="card" style="width: 18rem;">
  <img class="card-img-top" src="./assets/logo.png" alt="Card image cap">
   <div class="card-wrap">
  <div class="card-body">

   <section class="post">
    <div class="post-details">
      <h3>{{title}}</h3>
      <p>By: {{author}}</p>
      <p>Created: {{format_date created_date}}</p>
      <button type="button" id="delete-btn" class="btn btn-danger" blogpost={{id}}>Delete Post</button>
    </div>
    </div>
  </section>
</form>

  </div>

 

</div>


{{/each}}


 <script src="/js/homepage.js"></script>
